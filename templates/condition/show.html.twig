{% extends 'base.html.twig' %}

{% block title %}Condition{% endblock %}

{% block body %}
    <h1>Condition</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ condition.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ condition.code }}</td>
            </tr>
            <tr>
                <th>Parameters</th>
                <td>{{ condition.parameters ? condition.parameters|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('condition_index', {'rule': condition.rule.id}) }}">back to list</a>

    <a href="{{ path('condition_edit', {'id': condition.id, 'rule': condition.rule.id}) }}">edit</a>

    {{ include('condition/_delete_form.html.twig') }}
{% endblock %}
