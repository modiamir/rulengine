{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h1>Event index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.code }}</td>
                <td>
                    <a href="{{ path('event_show', {'id': event.id, 'rule': event.rule.id}) }}">show</a>
                    <a href="{{ path('event_edit', {'id': event.id, 'rule': event.rule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('event_new', {'rule': rule.id}) }}">Create new</a>
{% endblock %}
